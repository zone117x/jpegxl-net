<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net8.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>JpegXL.Net</RootNamespace>
    <AssemblyName>JpegXL.Net</AssemblyName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <!-- NuGet Package Properties -->
  <PropertyGroup>
    <PackageId>JpegXL.Net</PackageId>
    <Version>1.0.0</Version>
    <Authors>Your Name</Authors>
    <Company>Your Company</Company>
    <Description>A .NET library for decoding JPEG XL images. Wraps the jxl-rs Rust decoder with native libraries for Windows, Linux, and macOS.</Description>
    <PackageTags>jpegxl;jxl;image;codec;decoder</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/user/jpegxl-net</PackageProjectUrl>
    <RepositoryUrl>https://github.com/user/jpegxl-net</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="/" Condition="Exists('../README.md')" />
  </ItemGroup>

  <!-- Include MSBuild targets for copying native libraries at build time -->
  <ItemGroup>
    <None Include="JpegXL.Net/build/JpegXL.Net.targets" Pack="true" PackagePath="build/" />
    <None Include="JpegXL.Net/build/JpegXL.Net.targets" Pack="true" PackagePath="buildTransitive/" />
  </ItemGroup>

  <!-- Include native libraries for all supported platforms -->
  <ItemGroup>
    <!-- Windows -->
    <Content Include="runtimes/win-x64/native/jxl_ffi.dll" Pack="true" PackagePath="runtimes/win-x64/native/" CopyToOutputDirectory="PreserveNewest" Link="runtimes/win-x64/native/jxl_ffi.dll" Condition="Exists('runtimes/win-x64/native/jxl_ffi.dll')" />
    <Content Include="runtimes/win-arm64/native/jxl_ffi.dll" Pack="true" PackagePath="runtimes/win-arm64/native/" CopyToOutputDirectory="PreserveNewest" Link="runtimes/win-arm64/native/jxl_ffi.dll" Condition="Exists('runtimes/win-arm64/native/jxl_ffi.dll')" />
    <!-- Linux -->
    <Content Include="runtimes/linux-x64/native/libjxl_ffi.so" Pack="true" PackagePath="runtimes/linux-x64/native/" CopyToOutputDirectory="PreserveNewest" Link="runtimes/linux-x64/native/libjxl_ffi.so" Condition="Exists('runtimes/linux-x64/native/libjxl_ffi.so')" />
    <Content Include="runtimes/linux-arm64/native/libjxl_ffi.so" Pack="true" PackagePath="runtimes/linux-arm64/native/" CopyToOutputDirectory="PreserveNewest" Link="runtimes/linux-arm64/native/libjxl_ffi.so" Condition="Exists('runtimes/linux-arm64/native/libjxl_ffi.so')" />
    <!-- macOS -->
    <Content Include="runtimes/osx-x64/native/libjxl_ffi.dylib" Pack="true" PackagePath="runtimes/osx-x64/native/" CopyToOutputDirectory="PreserveNewest" Link="runtimes/osx-x64/native/libjxl_ffi.dylib" Condition="Exists('runtimes/osx-x64/native/libjxl_ffi.dylib')" />
    <Content Include="runtimes/osx-arm64/native/libjxl_ffi.dylib" Pack="true" PackagePath="runtimes/osx-arm64/native/" CopyToOutputDirectory="PreserveNewest" Link="runtimes/osx-arm64/native/libjxl_ffi.dylib" Condition="Exists('runtimes/osx-arm64/native/libjxl_ffi.dylib')" />
  </ItemGroup>

  <!-- netstandard2.0 polyfills -->
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="System.Memory" Version="4.5.5" />
    <PackageReference Include="Microsoft.Bcl.HashCode" Version="1.1.1" />
  </ItemGroup>

  <!-- Source Generator for public type generation -->
  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>Generated</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <!-- Exclude generated files from compilation (they're already included via the generator) -->
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="../JpegXL.Net.Generators/JpegXL.Net.Generators.csproj"
                      OutputItemType="Analyzer"
                      ReferenceOutputAssembly="false" />
  </ItemGroup>

</Project>
