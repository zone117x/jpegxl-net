<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="JpegXL.Viewer.MainWindow"
        Title="JPEG XL Viewer"
        Width="800" Height="600"
        DragDrop.AllowDrop="True">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8" Spacing="8">
            <Button Name="OpenButton" Content="Open File..." Click="OnOpenClick" />
            <Button Name="ZoomInButton" Content="Zoom In" Click="OnZoomInClick" />
            <Button Name="ZoomOutButton" Content="Zoom Out" Click="OnZoomOutClick" />
            <Button Name="ActualSizeButton" Content="1:1" Click="OnActualSizeClick" />
            <Button Name="FitButton" Content="Fit" Click="OnFitClick" />
            <Button Name="PlayPauseButton" Content="â–¶ Play" Click="OnPlayPauseClick" IsVisible="False" />
        </StackPanel>

        <!-- Image Display -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                BorderThickness="1"
                Margin="8"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                ClipToBounds="True"
                Name="ImageBorder"
                PointerPressed="OnPointerPressed"
                PointerMoved="OnPointerMoved"
                PointerReleased="OnPointerReleased"
                PointerWheelChanged="OnPointerWheelChanged">
            <Panel Name="ImagePanel">
                <Image Name="ImageDisplay"
                       Stretch="None"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

                <!-- Drop hint overlay -->
                <Border Name="DropHint"
                        Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}"
                        IsVisible="True"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <TextBlock Text="Drop a JPEG XL file here or click 'Open File...'"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>
            </Panel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="8,4">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                    <TextBlock Name="StatusText"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               Text="Ready" />
                    <TextBlock Name="ZoomText"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
                    <TextBlock Name="ImageInfoText"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <TextBlock Name="FrameInfoText" Foreground="LightGreen" IsVisible="False" />
                    <TextBlock Name="HdrInfoText" Foreground="Orange" IsVisible="False" />
                </StackPanel>
                <TextBlock Grid.Column="2" Name="ColorProfileText" Foreground="LightBlue" />
            </Grid>
        </Border>
    </Grid>
</Window>
